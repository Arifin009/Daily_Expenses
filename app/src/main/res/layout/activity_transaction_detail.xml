<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F6F7F9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:padding="16dp">

        <!-- Page Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transaction Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#111111"
            android:paddingBottom="12dp" />

        <!-- Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E6E8EC"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">

                <!-- Amount (highlight) -->
                <TextView
                    android:id="@+id/detailAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="à§³200"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#1F615C"
                    android:paddingBottom="6dp" />

                <!-- Category -->
                <TextView
                    android:id="@+id/detailCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Food"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#222222"
                    android:paddingBottom="12dp" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E6E8EC"
                    android:layout_marginBottom="14dp" />

                <!-- Description Row -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="14sp"
                    android:textColor="#6B7280" />

                <TextView
                    android:id="@+id/detailDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lunch with team"
                    android:textSize="16sp"
                    android:textColor="#111827"
                    android:layout_marginBottom="14dp" />

                <!-- Date Row -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textSize="14sp"
                    android:textColor="#6B7280" />

                <TextView
                    android:id="@+id/detailDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="May 30, 2025"
                    android:textSize="16sp"
                    android:textColor="#111827"
                    android:layout_marginBottom="14dp" />

                <!-- Month/Year Row -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Month"
                    android:textSize="14sp"
                    android:textColor="#6B7280" />

                <TextView
                    android:id="@+id/detailMonthYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="May 2025"
                    android:textSize="16sp"
                    android:textColor="#111827" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
